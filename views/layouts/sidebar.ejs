<div class="sidebar bg-light p-3">
    <h4>Product Filter</h4>
    <form action="/product/filter" method="get">
      <div class="mb-3">
        <h5>Size</h5>
        <hr class="border-top border-secondary">
        <div>
          <input type="checkbox" id="small" name="size" value="S">
          <label for="small">S</label>
        </div>
        <div>
          <input type="checkbox" id="medium" name="size" value="M">
          <label for="medium">M</label>
        </div>
        <div>
          <input type="checkbox" id="large" name="size" value="L">
          <label for="large">L</label>
        </div>
        <div>
          <input type="checkbox" id="extralarge" name="size" value="XL">
          <label for="extralarge">XL</label>
        </div>
      </div>

      <div class="mb-3">
        <h5>Color</h5>
        <hr class="border-top border-secondary">
        <%
        if(filter.colorFilter && filter.colorFilter.length>0){
          filter.colorFilter.forEach((color)=>{
        %>
        <div>
          <input type="checkbox" id="<%=color%>" name="color" value="<%=color%>">
          <label for="<%=color%>"><%=color.charAt(0).toUpperCase()+color.slice(1).toLowerCase()%></label>
        </div>
        <% 
          })
      }else{ %>
        <div>
        No Brand available  
        </div>
        <% }%>
        
      </div>

      <div class="mb-3">
        <h5>Brand</h5>
        <hr class="border-top border-secondary">
        <%
        if(filter.brandFilter && filter.brandFilter.length>0){
          filter.brandFilter.forEach((brand)=>{
        %>
        <div>
          <input type="checkbox" id="<%=brand%>" name="brand" value="<%=brand%>">
          <label for="<%=brand%>"><%=brand.toUpperCase()%></label>
        </div>
        <% 
          })
      }else{ %>
        <div>
        No color available  
        </div>
        <% }%>
      </div>
      <button type="submit" class="btn btn-outline-dark">Apply Filter</button>
    </form>
  </div>